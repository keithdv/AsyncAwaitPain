<UserControl x:Class="AsyncAwaitPain.WPF.Exception"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsyncAwaitPain.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="ucException">
    <StackPanel>
        <TextBlock Text="Throw Exception"></TextBlock>
        <TextBlock Text="{Binding Path=Count, ElementName=ucException, FallbackValue=NaN}"></TextBlock>
        <Button x:Name="Abandon" Click="Abandon_Click">Abandon</Button>
        <Button x:Name="AsyncVoid" Click="AsyncVoid_Click">Async Void</Button>
    </StackPanel>
</UserControl>
