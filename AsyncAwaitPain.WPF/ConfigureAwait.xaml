<UserControl x:Class="AsyncAwaitPain.WPF.ConfigureAwait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsyncAwaitPain.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="ucConfigureAwait">
    <StackPanel>
        <TextBlock>ConfigureAwait(false)</TextBlock>
        <TextBlock Text="{Binding Path=DelayCount, ElementName=ucConfigureAwait, FallbackValue=NaN}"></TextBlock>
        <TextBlock Text="{Binding Path=MethodCount, ElementName=ucConfigureAwait, FallbackValue=NaN}"></TextBlock>
        <Button x:Name="ConfigureAwaitFalse" Click="ConfigureAwaitFalse_Click">Abandon</Button>
        <Button x:Name="Wait" Click="Wait_Click">Wait</Button>
    </StackPanel>
</UserControl>
